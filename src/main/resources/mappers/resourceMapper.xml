<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 자원 네임스페이스(사용영역) 설정 -->
<mapper namespace="com.gsitm.mrs.mappers.ResourceMapper">

	<!-- 지사 목록 조회 -->
	<select id="getWorkplaceList" resultType="Workplace">
		SELECT workplace_no as workplaceNo, name, address 
		FROM Workplace
	</select>
	
	<!-- 비품 목록 조회 -->
	<select id="getEquipmentList" resultType="Equipment">
		SELECT equip_no as equipmentNo, room_no as roomNo, name, buy_date as buyDate 
		FROM Equipment
	</select>
	
</mapper>